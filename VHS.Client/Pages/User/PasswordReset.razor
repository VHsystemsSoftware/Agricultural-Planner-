@page "/reset-password"
@layout AuthLayout
@using System.ComponentModel.DataAnnotations
@using VHS.Services.Auth.DTO
@using VHS.Client.Services.Auth
@inject IStringLocalizer<Shared> Localizer
@inject AuthClientService AuthService
@inject NavigationManager Navigation
@inject PageTitleService PageTitleService
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5" Align="Align.Center">@Localizer["ResetPassword"]</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">@Localizer["EnterEmailAndPassword"]</MudText>
             </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <EditForm Model="@resetModel" OnValidSubmit="HandleReset">
                <DataAnnotationsValidator />

                <MudTextField @bind-Value="resetModel.Email"
                              For="@(() => resetModel.Email)"
                              Label="@Localizer["EmailAddress"]"
                              Variant="Variant.Outlined"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="@Localizer["EmailIsRequired"]"
                              Class="mb-4"/>

                <MudTextField @bind-Value="resetModel.NewPassword"
                              For="@(() => resetModel.NewPassword)"
                              Label="@Localizer["NewPassword"]"
                              Variant="Variant.Outlined"
                              InputType="@(isPasswordVisible ? InputType.Text : InputType.Password)"
                              Required="true"
                              RequiredError="@Localizer["NewPasswordRequired"]"
                              Adornment="Adornment.End"
                              AdornmentIcon="@(isPasswordVisible ? Icons.Material.Filled.VisibilityOff : Icons.Material.Filled.Visibility)"
                              OnAdornmentClick="@(() => isPasswordVisible = !isPasswordVisible)" />

                <MudCardActions Class="d-flex justify-center pa-4">
                     <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               Disabled="@isProcessing"
                               FullWidth="true"
                               Class="mt-4">
                        @if (isProcessing)
                        {
                            <MudProgressCircular Indeterminate="true" Size="Size.Small" />
                            <MudText Class="ms-2">@Localizer["Resetting"]</MudText>
                        }
                        else
                        {
                            <MudText>@Localizer["ResetPassword"]</MudText>
                        }
                    </MudButton>
                </MudCardActions>
            </EditForm>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-center pb-4">
             <MudLink Href="/login">@Localizer["BackToLogin"]</MudLink>
        </MudCardActions>
    </MudCard>
</MudContainer>


@code {
    private PasswordResetDTO resetModel = new();

    private bool isProcessing = false;
    private bool isPasswordVisible = false;

    protected override void OnInitialized()
    {
        PageTitleService.Title = Localizer["ResetPassword"];
    }

    private async Task HandleReset()
    {
        isProcessing = true;
        try
        {
            await AuthService.ResetPasswordAsync(resetModel);

            Snackbar.Add(Localizer["PasswordResetSuccess"], Severity.Success);
            await Task.Delay(2000);
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            Snackbar.Add(Localizer["PasswordResetFailed"], Severity.Error);
        }
        finally
        {
            isProcessing = false;
        }
    }
}
